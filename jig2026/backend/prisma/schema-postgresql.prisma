generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  nom        String
  prenom     String
  email      String   @unique
  motDePasse String
  role       Role     @default(UTILISATEUR)
  telephone  String?
  ecole      String?
  filiere    String?
  niveau     String?
  avatar     String?  
  projets    Projet[]
  votes      Vote[]
  messages   Contact[]
  suiviProjets ProjetSuivi[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@map("user")
}

model Jury {
  id         Int      @id @default(autoincrement())
  nom        String
  prenom     String
  email      String   @unique
  motDePasse String
  specialite String?
  bio        String?  
  photo      String?
  commentaires Commentaire[]
  votes        Vote[]
  suiviProjets ProjetSuivi[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@map("jury")
}

model Projet {
  id          Int          @id @default(autoincrement())
  titre       String
  description String       
  categorie   String
  fichier     String?
  image       String?
  statut      StatutProjet @default(EN_ATTENTE)
  user        User?        @relation(fields: [userId], references: [id])
  userId      Int?
  votes       Vote[]
  commentaires Commentaire[]
  suiviActivites ProjetSuivi[]
  moyenneVote Float?       @default(0)
  totalVotes  Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  @@map("projet")
}

model Vote {
  id        Int      @id @default(autoincrement())
  valeur    Float
  typeVote  TypeVote
  projetId  Int
  projet    Projet   @relation(fields: [projetId], references: [id], onDelete: Cascade)
  userId    Int?
  juryId    Int?
  user      User?    @relation(fields: [userId], references: [id])
  jury      Jury?    @relation(fields: [juryId], references: [id])
  createdAt DateTime @default(now())

  @@unique([projetId, userId])
  @@unique([projetId, juryId])
  @@map("vote")
}

model Commentaire {
  id        Int      @id @default(autoincrement())
  contenu   String   
  projetId  Int
  juryId    Int
  projet    Projet   @relation(fields: [projetId], references: [id], onDelete: Cascade)
  jury      Jury     @relation(fields: [juryId], references: [id])
  createdAt DateTime @default(now())
  
  @@map("commentaire")
}

model Programme {
  id          Int      @id @default(autoincrement())
  titre       String
  description String   
  dateDebut   DateTime
  dateFin     DateTime
  lieu        String
  type        String
  intervenant String?
  image       String?
  ordre       Int      @default(0)
  actif       Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("programme")
}

model Galerie {
  id          Int      @id @default(autoincrement())
  titre       String
  description String?  
  image       String
  categorie   String?
  ordre       Int      @default(0)
  actif       Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("galerie")
}

model Contact {
  id        Int      @id @default(autoincrement())
  nom       String
  email     String
  sujet     String
  message   String   
  statut    StatutContact @default(NOUVEAU)
  reponse   String?  
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("contact")
}

model Configuration {
  id    Int    @id @default(autoincrement())
  cle   String @unique
  valeur String 
  type   String @default("string")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("configuration")
}

model Notification {
  id          Int              @id @default(autoincrement())
  type        TypeNotification
  titre       String
  message     String           
  isRead      Boolean          @default(false)
  entityId    Int?             
  entityType  String?          
  metadata    String?          
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  
  @@map("notification")
}

enum Role {
  ADMIN
  JURY
  ETUDIANT
  UTILISATEUR
}

enum TypeVote {
  JURY
  ETUDIANT
  UTILISATEUR
}

enum StatutProjet {
  EN_ATTENTE
  EN_COURS
  EVALUE
  TERMINE
  APPROUVE
  REJETE
  SUSPENDU
}

enum StatutContact {
  NOUVEAU
  EN_COURS
  RESOLU
  FERME
}

enum TypeNotification {
  NOUVEAU_UTILISATEUR
  NOUVEAU_JURY
  NOUVEAU_PROJET
  NOUVEAU_VOTE
  PROJET_APPROUVE
  PROJET_REJETE
  NOUVEAU_COMMENTAIRE
  NOUVEAU_CONTACT
}

model ProjetSuivi {
  id           Int           @id @default(autoincrement())
  projetId     Int
  userId       Int?          
  juryId       Int?          
  typeReaction TypeReaction
  message      String        
  metadata     String?       
  visible      Boolean       @default(true) 
  
  projet       Projet        @relation(fields: [projetId], references: [id], onDelete: Cascade)
  user         User?         @relation(fields: [userId], references: [id])
  jury         Jury?         @relation(fields: [juryId], references: [id])
  
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@map("projet_suivi")
}

enum TypeReaction {
  COMMENTAIRE
  VOTE
  MODIFICATION
  AVIS_JURY
  VALIDATION
  REJET
  DEMANDE_MODIFICATION
  APPROBATION
  NOTE_INTERNE
}

model ContenuSite {
  id          Int      @id @default(autoincrement())
  cle         String   @unique 
  titre       String   
  contenu     String   
  type        TypeContenu @default(TEXT) 
  page        String   
  section     String   
  description String?  
  ordre       Int      @default(0) 
  actif       Boolean  @default(true) 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("contenu_site")
}

enum TypeContenu {
  TEXT     
  HTML     
  MARKDOWN 
  IMAGE    
  JSON     
}