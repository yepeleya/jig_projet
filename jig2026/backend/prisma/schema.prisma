generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modèle utilisateur unifié pour tous les types de participants (étudiants, entreprises, jury, grand public)
model User {
  id         Int      @id @default(autoincrement())
  nom        String
  prenom     String
  email      String   @unique
  motDePasse String
  role       Role     @default(VISITEUR)
  telephone  String?
  
  // Champs pour étudiants/élèves
  ecole      String?
  filiere    String?
  niveau     String?
  
  // Champs pour professionnels
  poste      String?
  secteur    String?
  
  // Champs pour jury/experts
  specialite String?
  bio        String?  
  experience String?
  
  // Informations générales
  avatar     String?
  linkedin   String?
  portfolio  String?
  
  // Relations
  projets          Projet[]
  votes            Vote[]
  commentaires     Commentaire[]
  messages         Contact[]
  suiviProjets     ProjetSuivi[]
  inscription      Inscription?
  
  // Statut et validation
  emailVerifie     Boolean  @default(false)
  profileComplete  Boolean  @default(false)
  actif           Boolean  @default(true)
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@map("user")
}

model Projet {
  id          Int          @id @default(autoincrement())
  titre       String
  description String       
  categorie   String
  fichier     String?
  image       String?
  statut      StatutProjet @default(EN_ATTENTE)
  user        User?        @relation(fields: [userId], references: [id])
  userId      Int?
  votes       Vote[]
  commentaires Commentaire[]
  suiviActivites ProjetSuivi[]
  moyenneVote Float?       @default(0)
  totalVotes  Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  @@map("projet")
}

model Vote {
  id        Int      @id @default(autoincrement())
  valeur    Float
  typeVote  TypeVote
  projetId  Int
  projet    Projet   @relation(fields: [projetId], references: [id], onDelete: Cascade)
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@unique([projetId, userId])
  @@map("vote")
}

model Commentaire {
  id        Int      @id @default(autoincrement())
  contenu   String   
  projetId  Int
  userId    Int
  projet    Projet   @relation(fields: [projetId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  
  @@map("commentaire")
}

model Programme {
  id          Int      @id @default(autoincrement())
  titre       String
  description String   
  dateDebut   DateTime
  dateFin     DateTime
  lieu        String
  type        String
  intervenant String?
  image       String?
  ordre       Int      @default(0)
  actif       Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("programme")
}

model Galerie {
  id          Int      @id @default(autoincrement())
  titre       String
  description String?  
  image       String
  categorie   String?
  ordre       Int      @default(0)
  actif       Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("galerie")
}

model Contact {
  id        Int      @id @default(autoincrement())
  nom       String
  email     String
  sujet     String
  message   String   
  statut    StatutContact @default(NOUVEAU)
  reponse   String?  
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("contact")
}

model Configuration {
  id    Int    @id @default(autoincrement())
  cle   String @unique
  valeur String 
  type   String @default("string")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("configuration")
}

model Notification {
  id          Int              @id @default(autoincrement())
  type        TypeNotification
  titre       String
  message     String           
  isRead      Boolean          @default(false)
  entityId    Int?             
  entityType  String?          
  metadata    String?          
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  
  @@map("notification")
}

enum Role {
  ADMIN
  ORGANISATEUR
  JURY
  EXPERT
  ETUDIANT_LICENCE
  ETUDIANT_MASTER
  ETUDIANT_DOCTORAT
  ELEVE_LYCEE
  ELEVE_COLLEGE
  PROFESSIONNEL
  ENTREPRISE
  STARTUP
  FREELANCE
  ENSEIGNANT
  CHERCHEUR
  VISITEUR
}

enum TypeVote {
  JURY_TECHNIQUE
  JURY_CREATIVITE
  JURY_INNOVATION
  PUBLIC_GENERAL
  ETUDIANT
  PROFESSIONNEL
  ENTREPRISE
}

enum StatutProjet {
  EN_ATTENTE
  EN_COURS
  EVALUE
  TERMINE
  APPROUVE
  REJETE
  SUSPENDU
}

enum StatutContact {
  NOUVEAU
  EN_COURS
  RESOLU
  FERME
}

enum TypeNotification {
  NOUVEAU_UTILISATEUR
  NOUVEL_EXPERT
  NOUVELLE_ENTREPRISE
  NOUVEAU_PROJET
  NOUVEAU_VOTE
  PROJET_APPROUVE
  PROJET_REJETE
  NOUVEAU_COMMENTAIRE
  NOUVEAU_CONTACT
  INSCRIPTION_EVENEMENT
  RAPPEL_EVENEMENT
  PROGRAMME_MODIFIE
  RESULTATS_CONCOURS
}

model ProjetSuivi {
  id           Int           @id @default(autoincrement())
  projetId     Int
  userId       Int          
  typeReaction TypeReaction
  message      String        
  metadata     String?       
  visible      Boolean       @default(true) 
  
  projet       Projet        @relation(fields: [projetId], references: [id], onDelete: Cascade)
  user         User          @relation(fields: [userId], references: [id])
  
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@map("projet_suivi")
}

enum TypeReaction {
  COMMENTAIRE
  VOTE
  MODIFICATION
  AVIS_JURY
  VALIDATION
  REJET
  DEMANDE_MODIFICATION
  APPROBATION
  NOTE_INTERNE
}

model ContenuSite {
  id          Int      @id @default(autoincrement())
  cle         String   @unique 
  titre       String   
  contenu     String   
  type        TypeContenu @default(TEXT) 
  page        String   
  section     String   
  description String?  
  ordre       Int      @default(0) 
  actif       Boolean  @default(true) 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("contenu_site")
}

enum TypeContenu {
  TEXT     
  HTML     
  MARKDOWN 
  IMAGE    
  JSON     
  VIDEO
  DOCUMENT
}

// Modèle pour l'inscription à l'événement (ouvert à tous)
model Inscription {
  id          Int      @id @default(autoincrement())
  userId      Int      @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  statut      StatutInscription @default(EN_ATTENTE)
  typeParticipation TypeParticipation
  motivations String?
  besoinsSpeciaux String?
  dietaireSpecial String?
  newsletter  Boolean  @default(true)
  confirme    Boolean  @default(false)
  present     Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("inscription")
}

enum StatutInscription {
  EN_ATTENTE
  CONFIRME
  ANNULE
  PRESENT
  ABSENT
}

enum TypeParticipation {
  VISITEUR
  PARTICIPANT_CONCOURS
  INTERVENANT
  PARTENAIRE
  MEDIA
  VIP
}